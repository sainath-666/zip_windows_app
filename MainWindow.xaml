<Window x:Class="BottomUpZipper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bottom-Up Folder Zipper" Height="350" Width="600"
        ResizeMode="CanMinimize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Bottom-Up Folder Zipper" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Selected Folder Display -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Selected Folder:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="SelectedFolderTextBox" IsReadOnly="True" 
                     Background="#F0F0F0" Padding="5"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
            <Button x:Name="SelectFolderButton" Content="Select Folder to Zip" 
                    Width="150" Height="35" Margin="0,0,10,0"
                    Click="SelectFolderButton_Click"/>
            <Button x:Name="StartZipButton" Content="Start Bottom-Up Zip" 
                    Width="150" Height="35" Margin="0,0,10,0"
                    Click="StartZipButton_Click" IsEnabled="False"/>
        </StackPanel>

        <!-- Status -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Status:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBlock x:Name="StatusTextBlock" Text="Ready" 
                       TextWrapping="Wrap" Foreground="#333333"/>
        </StackPanel>

        <!-- Progress Bar -->
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Progress:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ProgressBar x:Name="ProgressBar" Height="25" Minimum="0" Maximum="100" Value="0"/>
            <TextBlock x:Name="ProgressTextBlock" Text="0%" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Current Operation -->
        <StackPanel Grid.Row="5" Margin="0,0,0,10">
            <TextBlock Text="Current Operation:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBlock x:Name="CurrentOperationTextBlock" Text="" 
                       TextWrapping="Wrap" FontStyle="Italic" Foreground="#666666"/>
        </StackPanel>

        <!-- Log ScrollViewer (Optional) -->
        <ScrollViewer Grid.Row="6" VerticalScrollBarVisibility="Auto" 
                      BorderBrush="#CCCCCC" BorderThickness="1">
            <TextBlock x:Name="LogTextBlock" Padding="5" TextWrapping="Wrap" 
                       Background="#FAFAFA"/>
        </ScrollViewer>
    </Grid>
</Window>
